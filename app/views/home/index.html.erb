<style type="text/css">
.bfloatable {
  position: relative;
}
.float_from_bottom {
  position: absolute;
  margin-bottom: 5;
}
</style>
<script type="application/javascript">
$(document).ready(function() {
    $('.span4').css({
        'height': $('.span4').height()+75
    });
  });
</script>
<div class="row">
  <!-- <h1>Urban Crossfitters</h1> -->
  <div class = "hero-unit">
  <%= image_tag src=image_path('cs110logo3.png') %>
  <p>Welcome to HERP's web application, Urban Crossfitters.</p>
  <p><a href="<%= login_path %>" class="btn btn-info btn-large">Log in with Facebook &raquo;</a>
  </div>
  <!-- Example row of columns -->
  <div class="row-fluid">
    <div class="span4 bfloatable">
      <h2><i class="icon-user"></i>Profile</h2>
      <p>View or edit your profile.</p>
      <%= content_tag :p,link_to('View details ', profiles_path+'/me', :class => 'btn btn-info float_from_bottom') %>
    </div>
    <div class="span4 bfloatable">
      <h2><i class="icon-fire"></i>Workout</h2>
      <p>Execute a workout or view your history.</p>
      <%= content_tag :p,link_to('View details ', workout_records_path, :class => 'btn btn-info float_from_bottom') %>
    </div>
    <div class="span4 bfloatable">
      <h2><i class="icon-heart"></i>Health</h2>
      <p>View or modify your health statistics.</p>
      <%= content_tag :p,link_to('View details ', health_records_path, :class => 'btn btn-info float_from_bottom') %>
    </div>  
  </div>
    <div class="row-fluid">
      <div class="span4 bfloatable">
        <h2><i class="icon-calendar"></i>Calendar</h2>
        <p>Create, view, or edit your calendar entries.</p>
        <p class="float_from_bottom"><%= link_to('View details ', '/calendar', :class => 'btn btn-info') %></p>
      </div>
      <div class="span4 bfloatable">
        <h2><i class="icon-question-sign"></i>Goals</h2>
        <p>Manage your goals.</p>
        <p class="float_from_bottom"><%= link_to 'View details', goals_path, :class => 'btn btn-info' %></p>
     </div>
     <div class="span4 bfloatable">
      <h2><i class="icon-tasks"></i>Stats</i></h2>
      <p>View your workout statistics.</p>
      <p class="float_from_bottom"><%= link_to 'View details', '#', :class => 'btn btn-info' %></p>
    </div>
  </div>
</div>